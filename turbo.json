{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "release": {
            "dependsOn": ["^lint", "^build", "^release"]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "inputs": ["$TURBO_DEFAULT$", ".env*"]
        }
    }
}
